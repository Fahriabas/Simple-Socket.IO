<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tes Socketio</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1>STUDENT LIST</h1>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">name</th>
              <th scope="col">class</th>
            </tr>
          </thead>
          <tbody>
            <% instanceStudent.forEach((student, index) => { %>
            <tr>
              <th scope="row"><%= index +1 %>.</th>
              <th scope="row"><%= student?.name %></th>
              <th scope="row"><%= student?.classroom %></th>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="container">
      <h1>Add New Students</h1>
      <form action="/add" method="POST">
        <div class="row mb-3">
          <label for="" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              name="name"
              id="inputEmail3"
            />
          </div>
        </div>
        <div class="row mb-3">
          <label for="" class="col-sm-2 col-form-label">Class</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              name="classroom"
              id="inputEmail3"
            />
          </div>
        </div>
        <input type="submit" class="btn btn-danger" value="ADD" />
      </form>
    </div>
      <div class="container">
        <h1>TESTING REALTIME CHAT</h1>
        <a href="/chat" class="float-end mb-4 btn btn-primary">Discussion Form</a>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
